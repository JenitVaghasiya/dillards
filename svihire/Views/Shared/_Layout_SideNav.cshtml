<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <ul id="svi-side-nav" class="side-nav fixed">
        <li>--Brand Goes Here--</li>
        <li>Filter Candidates By:</li>
        <li class="no-padding">
            <ul class="collapsible" data-collapsible="expandable">
                @RenderSection("navitems", required: true)
            </ul>
        </li>

    </ul>

    <nav>
        <div class="nav-wrapper">
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>
                    <a class='dropdown-button' href='#' data-activates='userdropdown'><i class="material-icons">account_circle</i></a>

                    <ul id='userdropdown' class='dropdown-content collection with-header svi-dropdown'>
                        <li class="collection-header valign-wrapper"><i class="material-icons left">person_pin</i><div class="username"></div></li>
                        @*<li class="collection-item  valign-wrapper"><a class="progress-action" href="../Account/UserSettings"><i class="material-icons left">settings</i>User Settings</a></li>
                            <li class="divider" tabindex="-1"></li>*@
                        <li class="collection-item valign-wrapper"><a class="progress-action" href="javascript:document.getElementById('logoutForm').submit()"><i class="material-icons left">exit_to_app</i>Log off</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div class="svi-body">
        @RenderBody()
    </div>







    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialize")
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>*@
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)
</body>
</html>

